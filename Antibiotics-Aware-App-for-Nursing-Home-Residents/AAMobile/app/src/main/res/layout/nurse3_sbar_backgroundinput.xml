<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Nurse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/BackGroundTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="Background"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/interdwellingCathetar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indwelling cathetar?"
            android:textSize="18sp" />
        /*android:onClick="onCheckboxClicked"/>*/

        <RadioGroup
            android:id="@+id/indwellingRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/urethral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Urethral"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/suprapubic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Suprapubic"
                android:textSize="18sp" />
        </RadioGroup>
        <![CDATA[

        /*android:onClick="onCheckboxClicked"/>*/


            /*android:onClick="onCheckboxClicked"/>*/

        ]]>

        <CheckBox
            android:id="@+id/incontinence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incontinence?"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
        /*android:onClick="onCheckboxClicked"/>*/

        <RadioGroup
            android:id="@+id/incontinenceRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/new_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="New"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/worsening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Worsening"
                android:textSize="18sp" />
        </RadioGroup>
        <![CDATA[



            /*android:onClick="onCheckboxClicked"/>*/

        /*android:onClick="onCheckboxClicked"

        ]]>

        <CheckBox
            android:id="@+id/utiIn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UTI in the last 6 months?"
            android:textSize="18sp" />

        /*android:onClick="setDate"*/

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="25dp"
                android:text="Date: "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SELECT DATE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="25dp"
                android:text="Organisms:"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/organisms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Organisms"
                android:maxLength="1000"
                android:textSize="18sp" />
        </TableRow>


        /*android:onClick="clearChecks"*/

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="25dp"
                android:text="Treatment:"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/treatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Treatment"
                android:maxLength="1000"
                android:textSize="18sp" />
        </TableRow>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingRight="25dp"
            android:text="Active diagnosis (especially bladder, kidney, genitourinary conditions; diabetes; receiving dialysis, anticoagulants):"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/active_diagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Active diagnosis"
            android:maxLength="1000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingRight="25dp"
            android:text="Advance directives for limiting treatment (especially antibiotic use):"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/advance_directives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Advance directives"
            android:maxLength="1000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:paddingRight="25dp"
            android:text="Medication allergies:"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/blactemallergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="B-Lactem Allergy? (Penicillin)"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/pyelonephritis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Suspect Pyelonephritis?"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/prostatitis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Suspect Prostatitis?"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/home_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Home" />

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Clear" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Next" />
        </TableRow>

        /*android:onClick="nextScreen"*

    </LinearLayout>
</ScrollView>